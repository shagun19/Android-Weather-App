<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="330dp"
        android:layout_gravity="center"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/dialog_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            android:padding="2dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="TextView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="260dp"
            android:background="@color/colorPrimaryDark"/>

        <View
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:layout_marginTop="260dp"
            android:layout_marginStart="150dp"
            android:background="@color/colorPrimaryDark"/>

        <ImageView
            android:id="@+id/dialog_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="275dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/bluetwitter" />

        <ImageView
            android:id="@+id/dialog_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="275dp"
            android:layout_marginRight="50dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ic_bookmark_border_large_50dp"
            tools:srcCompat="@drawable/ic_bookmark_border_large_50dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>